<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kushagra.meetupapp.StartNewStudentQueryActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Title" />

    <MultiAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true"
        android:hint="Enter Tags"
        android:id="@+id/tags"
        android:completionThreshold="1"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tags"
        android:layout_alignParentStart="true"
        android:id="@+id/ta"
        android:layout_alignParentEnd="true"
        android:completionThreshold="1"
        android:hint='Wanna ask ur "friend" TA?'
        android:paddingBottom="20dp" />

    <CheckBox
        android:text="I want receiver use free time slots sender my schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickCheck"
        android:id="@+id/check"
        android:layout_below="@+id/ta"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:layout_below="@+id/check"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" >

        <TextView
            android:text="I am free sender :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="FROM TIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromtime"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:gravity="center"
                android:onClick="clickFromTime" />

            <TextView
                android:text="receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="TO TIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totime"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:gravity="center"
                android:onClick="clickToTime" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="DATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:gravity="center"
                android:onClick="clickDate" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="Send Query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/sendquery"
        android:layout_alignParentEnd="true"
        android:onClick="clickSendQuery" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/description"
        android:hint="Enter Query"
        android:maxLines="3"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>